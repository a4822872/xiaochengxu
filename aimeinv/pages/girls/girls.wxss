.name{
	height: 40px;
    color: rgb(170, 170, 170);
    background: rgb(248, 248, 248);
    width: 352rpx;
    padding:0px;
}
.name text{
	text-align: center;
	font: 12px/40px 宋体;
    overflow: hidden;
    display: block;
	width: 332rpx;
	text-overflow:ellipsis;
	white-space:nowrap;
	margin:0 auto;
}
.img-wrap{
	position: relative;
}
.item{
	float: left;
	padding:12rpx 13rpx 12rpx 11rpx;
}
.item-right{
	float: left;
	padding:12rpx 11rpx 12rpx 13rpx;
}
.item image, .item-right image{
	width: 352rpx;
	height: 480rpx;
	display: block;
	padding:0px;
	background:#eee;
}
.count{
	background-color:rgba(0,0,0,.5);
	color:#fff;
	font-size:.5rem;
	padding:.1rem .15rem;
	width:1.8rem;
	text-align:center;
	position: absolute;
	bottom:0;
	right:0;

}
.loading{
	font-size:14px;
	 color:#d2d2d2;
	 text-align:center;
	 line-height:24px;
	 /*border-top:1px #eee solid;*/
	 padding:15px 0;
	 height:30px;
	 padding-left:20px;
	 overflow:hidden;
	 position:relative;
	 margin-top: 5px;
}
.menu{
	width: 100%;
	height: 50px;
	/*background-color:#eee;*/
	white-space: nowrap;
	border-top:1px #eee solid;
}
.menu .active{
	color: #f37bb3;
}
.menu-item{
	display: inline-block;
	padding: 0 10px;
	margin: 6px;
	font: 14px/40px 宋体;
}

